<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render 'users/user-info', user: @user %>
      <%= render 'books/user-info', book: @book %>
    </div>
    
    <div class="col-md-8 offset-md-1">
      <h3>Group Detail</h3>
      <table class="table">
        <tbody>
          <td><%= attachment_image_tag @group, :image, :fill, 20, 20, fallback: "no_image.jpg", size:'20x20' %></td>
          <td><%= @group.name %></td>
          <td><%= @group.introduction %></td>
          <% if @group.owner_id == current_user.id %>
          <td><%= link_to "Edit", edit_group_path(@group), class: "btn btn-success" %></td>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>