<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render 'users/user-info', user: @user %>
      <%= render 'books/user-info', book: @book %>
    </div>
    
    <div class="col-md-8 offset-md-1">
      <h3>Groups</h3>
      <table class="table">
        <thead>
          <th></th>
          <th>グループ名</th>
          <th>紹介文</th>
          <th>メンバー数</th>
          <th></th>
        </thead>
        <% @groups.each do |group| %>
        <tbody>
          <td><%= attachment_image_tag group, :image, fallback: "no_image.jpg", size: "30x30" %></td>
          <td><%= link_to group.name, group_path(group) %></td>
          <td><%= group.introduction %></td>
          <td><%= group.users.count %></td>
          <!--#ログイン中のuserがオーナーだった場合のみ表示-->
          <% if group.owner_id == current_user.id %>
            <td><%= link_to "Edit", edit_group_path(group), class: "btn btn-success" %></td>
          <% end %>
        </tbody>
        <% end %>
      </table>
      
    </div>
  </div>
</div>