<div class="container">
  <div class="row">
    <div class="mt-auto">
      <h3>Event Mail</h3>
      <!--#methodがgetに注意-->
      <%= form_with url: group_send_mail_path(@group), method: :get, local: true do |f| %>
      <%= f.label :Title %><br>
      <%= f.text_field :mail_title %><br>
      <%= f.label :Content %><br>
      <%= f.text_area :mail_content %><br>
      <%= f.submit '送信' %>
      <% end %>
    </div>
  </div>
</div>