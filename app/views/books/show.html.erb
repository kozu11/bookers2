<div class="container">
  <div class="row">
    <div class="col-lg-4">
      <%= render 'users/user-info', user: @user %>
      <%= render 'books/user-info', book: @booknew %>
    </div>
    
    <div class="col-lg-8">
      <h2>Book detail</h2>
      <table class="table">
        <tbody>
          <tr>
            <td><%= attachment_image_tag @user, :profile_image, fallback: "no_image.jpg", size: "40x40" %><br><%= link_to user_path(current_user) do %><%= @user.name %><% end %></td>
            <td><%= link_to book_path(@book.id) do %><%= @book.title %><% end %></td>
            <td><%= @book.body %></td>
            
            <td><% if @book.user == current_user %><%= link_to "Edit", edit_book_path(@book.id), class: "btn btn-success" %><% end %></td>
            <td><% if @book.user == current_user %><%= link_to "Destroy", book_path(@book.id), method: :delete, "data-confirm" => "本当に消しますか？", class: "btn btn-danger" %><% end %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>