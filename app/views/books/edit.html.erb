<div class="container">
  <div class="row">
    <div class="mx-auto col-lg-4">
     
      <h1>Editing Book</h1>
      
      <% if @book.errors.any? %>
       <div class="error-message">
        <div class="error-message-bigger"><%= pluralize(@book.errors.count, "error") %> prohibited this obj from being saved:</div
        <ul><% @book.errors.full_messages.each do |message| %>
        <li><%= message %>
        <% end %></li>
        </ul>
       </div>
      <% end %>
      
      
      <%= form_with model:@book, local:true do |f| %>
      
        <h5>Title</h5>
        <%= f.text_field :title %>
        <h5>Opinion</h5>
        <%= f.text_field :body %><br>
        <%= f.submit 'Update Book', class: "btn btn-success" %>
      <% end %>
      <%= link_to "Show", book_path(@book.id) %>  <!--bookのshowページへ-->
      <span>|</span>
      <%= link_to "Back", books_path %>　<!--bookのindeページへ-->
    </div>
  </div>
</div>