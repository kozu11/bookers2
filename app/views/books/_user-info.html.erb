 <h2>New book</h2>
      <%= form_with model:book, local:true do |f| %>
      
        <%= f.label :Title %><br>
        <%= f.text_field :title %><br>
        
        <%= f.label :Opinion %><br>
        <%= f.text_area :body %>
        
        <%= f.submit 'Create Book', class: "btn btn-success" %>
      <% end %>