<h2>User info</h2>

<%= attachment_image_tag @user, :profile_image, :fill,60 ,60, format: 'jpg', fallback: ''%>
<table>
  <tr>
    <td>name</td>
    <td><%= @user.name %></td>
  </tr>
  <tr>
    <td>introduction</td>
    <td><%= @user.introduction %></td>
  </tr>
</table>


<h1>New Book</h1>
<%= form_with model:@book, local:true do |f| %>
  <h5>Title</h5>
  <%= f.text_field :title %>
  <h5>Opinion</h5>
  <%= f.text_area :body %><br>
  <%= f.submit 'Create Book' %>
<% end %>