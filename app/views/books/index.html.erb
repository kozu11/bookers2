<div class="container">
    
    <% if @book.errors.any? %>
     <div class="error-message">
       <div class="error-message-bigger"><%= pluralize(@book.errors.count, "error") %> prohibited this obj from being saved:</div>
        <ul><% @book.errors.full_messages.each do |message| %>
        <li><%= message %>
        <% end %></li>
        </ul>
     </div
      <% end %>
      
  <div class="row">
      
    <div class="col-lg-4">
    <%= render 'users/user-info', user: @user %>
    <%= render 'books/user-info', book: @book %>
    </div>

    <div class="col-lg-8">
      <h1>Books</h1>
        <table class="table">
          <thead>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
            </tr>
          </thead>
          <tbody>
          <% @books.each do |book| %>
            <tr>
              <td><%= link_to user_path(book.user) do %><%= attachment_image_tag book.user, :profile_image, fallback: "no_image.jpg", size: "40x40" %><% end %></td>
              <td><%= link_to book_path(book.id) do %><%= book.title %><% end %></td>
              <td><%= book.body %></td>
            </tr>
          <% end %>
          </tbody>
      </table>
    </div>
    </div>
  </div>
</div>