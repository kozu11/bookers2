<h2>User info</h2>
      <table class="table">
       <tbody>
         <tr><%= attachment_image_tag user, :profile_image, :fill, 60 ,60, format: 'jpg', fallback: "no_image.jpg" %></tr>
         <tr>
           <th>name</th>
           <th><%= user.name %></th>
         </tr>
         <tr>
           <th>introduction</th>
           <th><%= user.introduction %></th>
         </tr>
         <tr>
           <th colspan="2"><% if user.id == current_user.id %><%= link_to edit_user_path(current_user.id), class: "btn btn-outline-secondary btn-block" do %><i class="fas fa-user-cog"></i><% end %><% end %></th>
         </tr>
       </tbody>
      </table>