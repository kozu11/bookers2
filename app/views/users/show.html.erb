<div class="container">
  <div class="row">
    <div class="col-lg-4">
      <h2>User info</h2>
      <table class="table">
       <tbody>
         <tr><%= attachment_image_tag @user, :profile_image, :fill, 60 ,60, format: 'jpg', fallback: "no_image.jpg" %></tr>
         <tr>
           <th>name</th>
           <th><%= @user.name %></th>
         </tr>
         <tr>
           <th>introduction</th>
           <th><%= @user.introduction %></th>
         </tr>
         <tr>
           <th colspan="2"><% if @user.id == current_user.id %><%= link_to "編集", edit_user_path(current_user) %><% end %></th>
         </tr>
       </tbody>
      </table>
      
      <h1>New Book</h1>
      <%= form_with model:@book, local:true do |f| %>
        <h5>Title</h5>
        <%= f.text_field :title %>
        <h5>Opinion</h5>
        <%= f.text_area :body %><br>
        <%= f.submit 'Create Book' %>
      <% end %>
    </div>
  </div>
</div>

    <div class="col-lg-8">
      <h1>Books</h1>
        <table class="table">
          <thead>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
            </tr>
          </thead>
          <tbody>
          <%= @books.each do |book| %>
            <tr>
              <td><%= attachment_image_tag @user, :profile_image %></td>
              <td><%= book.title %></td>
              <td><%= book.body %></td>
            </tr>
          <% end %>
          </tbody>
      </table>
   </div>

