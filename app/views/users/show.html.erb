<div class="container">
  <div class="row">
    <div class="col-lg-4">
      <%= render 'users/user-info', user: @user %>
      <%= render 'books/user-info', book: @book %>
    </div>

    <div class="col-lg-8">
      <h2>Books</h2>
        <table class="table">
          <thead>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
            </tr>
          </thead>
          <tbody>
          <% @books.each do |book| %>
            <tr>
              <td><%= link_to user_path(@user.id) do %><%= attachment_image_tag @user, :profile_image, fallback: "no_image.jpg", size: "40x40" %><% end %></td>
              <td><%= link_to book_path(book.id) do %><%= book.title %><% end %></td>
              <td><%= book.body %></td>
            </tr>
          <% end %>
          </tbody>
        </table>
    </div>
  </div>
</div>

